@import url('https://fonts.googleapis.com/css2?family=Impact:wght@700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;



body {
  margin: 0;
  font-family: Arial, sans-serif;
  font-weight: 400;
  background-color: #FF6B6B;
  color: #000;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}


h1, h2, h3, h4, h5, h6 {
  font-family: 'Impact', Arial Black, sans-serif;
  font-weight: 700;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  margin: 0;
  color: #000;
}


button {
  font-family: 'Impact', Arial Black, sans-serif;
  font-weight: 700;
  border: 4px solid #000;
  background-color: #FFFF00;
  color: #000;
  padding: 12px 20px;
  cursor: pointer;
  transform: rotate(1deg);
  box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.5);
  transition: all 0.1s ease;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-radius: 0;
}

button:hover {
  background-color: #FF1493;
  color: #fff;
  transform: rotate(-2deg) scale(1.05);
  box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.6);
}

button:active {
  transform: rotate(0deg) scale(0.98);
  box-shadow: 2px 2px 0px rgba(0, 0, 0, 0.3);
}


input, textarea, select {
  font-family: Arial, sans-serif;
  border: 4px solid #000;
  background-color: #fff;
  color: #000;
  padding: 10px;
  box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.4);
  font-size: 14px;
  transform: rotate(0.5deg);
  border-radius: 0;
  font-weight: bold;
}

input:focus, textarea:focus, select:focus {
  outline: none;
  background-color: #FFFF00;
  box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.5);
  transform: rotate(-0.5deg);
}


.card, article, section {
  background-color: #fff;
  border: 4px solid #000;
  box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.4);
  padding: 16px;
  transform: rotate(1deg);
  border-radius: 0;
}

.card:hover {
  transform: rotate(-1deg) translateY(-2px);
  box-shadow: 10px 10px 0px rgba(0, 0, 0, 0.5);
}


.container, main {
  background-color: #FF6B6B;
  border: 6px solid #000;
  padding: 24px;
  box-shadow: 12px 12px 0px rgba(0, 0, 0, 0.4);
  border-radius: 0;
}


.task-card {
  background-color: #ffffff !important;
  border: 4px solid #000 !important;
  color: #000 !important;
  box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.4) !important;
  border-radius: 0 !important;
  transform: rotate(1deg);
}

.task-card:hover {
  box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.5) !important;
  transform: rotate(-1deg) translateY(-2px);
}


.list-column {
  background-color: #3B82F6 !important;
  border: 6px solid #000 !important;
  border-radius: 0 !important;
  box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.4) !important;
  padding: 16px !important;
}


.page-background {
  background-color: #FF6B6B !important;
  border-radius: 0;
}


.accent-red {
  background-color: #FF0000 !important;
  color: #fff !important;
  border-color: #000 !important;
  border-radius: 0;
}

.accent-yellow {
  background-color: #FFFF00 !important;
  color: #000 !important;
  border-color: #000 !important;
  border-radius: 0;
}

.accent-cyan {
  background-color: #00FFFF !important;
  color: #000 !important;
  border-color: #000 !important;
  border-radius: 0;
}

.accent-green {
  background-color: #00FF00 !important;
  color: #000 !important;
  border-color: #000 !important;
  border-radius: 0;
}


* {
  border-radius: 0 !important;
}


::-webkit-scrollbar {
  height: 12px;
  width: 12px;
}

::-webkit-scrollbar-track {
  background: #FF6B6B;
  border: 3px solid #000;
}

::-webkit-scrollbar-thumb {
  background: #FFFF00;
  border: 2px solid #000;
  box-shadow: inset 0 0 0 2px #000;
}

::-webkit-scrollbar-thumb:hover {
  background: #FF1493;
}

